<div class="container">
  <h1>New Game</h1>

  <div id="letters">
    <% $letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <form action="score" method="POST" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="word_field">What is the longest word you can find?</label>
    <input type="text" name="word" id="word_field">
    <input type="submit" value="Play!" id="play">
</form>
</div>
